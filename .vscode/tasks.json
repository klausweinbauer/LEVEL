{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Valgrind-Unit",
			"command": "valgrind --leak-check=full --show-leak-kinds=all --track-origins=yes --verbose --log-file=valgrind-out.txt ${workspaceFolder}/build/test/unit/UnitTests && code valgrind-out.txt",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "Valgrind-Integration",
			"command": "valgrind --leak-check=full --show-leak-kinds=all --track-origins=yes --verbose --log-file=valgrind-out.txt ${workspaceFolder}/build/test/integration/IntegrationTests && code valgrind-out.txt",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "Coverage-HTML",
			"command": "mkdir -p ${workspaceFolder}/coverage && python3 -m gcovr --html-details ${workspaceFolder}/coverage/index.html -e \"${workspaceFolder}/test/*\" -e \"${workspaceFolder}/src/msg/*\" -e \"${workspaceFolder}/build/*\" --exclude-unreachable-branches --exclude-function-lines --exclude-throw-branches && firefox file://${workspaceFolder}/coverage/index.html",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "Coverage-XML",
			"command": "python3 -m gcovr --cobertura LEVEL_Coverage.xml -e \"${workspaceFolder}/test/*\" -e \"${workspaceFolder}/src/msg/*\" -e \"${workspaceFolder}/build/*\" --object-directory ${workspaceFolder}/build/test/unit/ --exclude-unreachable-branches --exclude-function-lines --exclude-throw-branches",
			"problemMatcher": []
		}
	]
}